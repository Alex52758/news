<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout android:id="@+id/rl_newsItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/iv_newsPhoto"
            android:layout_alignParentStart="true"
            android:layout_marginRight="2dp"
            android:layout_width="100dp"
            android:src="@drawable/logotext"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/tv_newsLabel"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/iv_newsPhoto"
            android:layout_height="wrap_content"
            android:text="Label"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tv_newsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="15:31 12.11.21"
            android:layout_below="@id/iv_newsPhoto"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>